<body>
    <%-include('./partials/preloader')%>

        <%-include('./partials/header')%>


            <%-include('./partials/left-sidebar')%>
                <div class="mobile-menu-overlay"></div>

                <div class="main-container">
                    <div class="min-height-200px">
                        <div class="page-header">
                            <div class="row">
                                <div class="col-md-6 col-sm-12">
                                    <div class="title">
                                        <h4>Form de Editar</h4>
                                    </div>
                                    <nav aria-label="breadcrumb" role="navigation">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">Treino</li>
                                        </ol>
                                    </nav>
                                </div>
                            </div>
                        </div>
                        <!-- horizontal Basic Forms Start -->
                        <div class="pd-20 card-box mb-30">
                            <div class="clearfix">
                                <div class="pull-left">
                                    <h4 class="text-blue h4">Editar Treino</h4>
                                </div>
                            </div>
                            <div class="faq-wrap">
                                <div id="accordion">
                                    <div class="card">
                                        <div class="card-header">
                                            <button style="background-color: #1d1c1c; " class="btn btn-block"
                                                data-toggle="collapse" data-target="#faq1">
                                                Editar o treino
                                            </button>
                                        </div>
                                        <div id="faq1" class="collapse hidden pt-4" data-parent="#accordion">

                                            <div class="card-body">
                                                <form id="createTreinoForm" method="post"
                                                    action="/admin/edit-treino/<%=treino.id%>">
                                                    <div class="form-group">
                                                        <label>Nome</label>
                                                        <input class="form-control" type="text" name="nome_do_treino"
                                                            value="<%=treino.nome_do_treino%>">
                                                    </div>
                                                    
                                                    <div class="form-group">
                                                        <label>descricao_do_treino</label>
                                                        <input class="form-control" type="text"
                                                            name="descricao_do_treino"
                                                            value="<%=treino.descricao_do_treino%>">
                                                    </div>
                                                    
                                                    <button class="btn btn-success" type="submit">Editar</button>
                                                    <a href="/admin/list-treinos" class="btn btn-secondary">Voltar</a>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card">
                                        <div class="card-header">
                                            <button style="background-color: #1d1c1c;" class="btn btn-block collapsed"
                                                data-toggle="collapse" data-target="#faq2">
                                                Sessões
                                            </button>
                                        </div>
                                        <div id="faq2" class="collapse pt-4" data-parent="#accordion">
                                            <div class="card-body">
                                                <form id="treino-form" action="/admin/create-sessao" method="POST">
                                                    <!-- Campo oculto para o ID do treino -->
                                                    <input type="hidden" name="treinoId" id="treinoId" value="<%= treino.id %>">
                                        
                                                    <div id="sessoes-container">
                                                        <!-- Área para adicionar sessões dinamicamente -->
                                                    </div>
                                                    <button class="btn btn-outline-primary" type="button" id="add-sessao">Adicionar Sessão</button>
                                                    <button class="btn btn-outline-dark" type="submit">Salvar Sessão</button>
                                                </form>
                                            </div>
                                        </div>
                                        
                                        
                                    </div>
                                    <div class="card">
                                        <div style="background-color: #300808;" class="card-header">
                                            <button class="btn btn-block collapsed text-white" data-toggle="collapse"
                                                data-target="#faq3">
                                                Visualizar Treino
                                            </button>
                                        </div>
                                        <div id="faq3" class="collapse" data-parent="#accordion">
                                            <div class="card-body">
                                                <h6 class="pt-3" style="font-size: small;">
                                                    Nome: <%= treino.nome_do_treino %>
                                                        <hr>
                                                        <!-- Botão para visualizar treino completo -->
                                                        <button class="btn btn-outline-dark btn-sm mb-4"
                                                            data-toggle="modal" data-target="#viewTreinoCompletoModal">
                                                            Ver treino completo
                                                        </button>
                                                </h6>

                                                <h6 style="font-size: small;">Sessões:</h6>
                                                <hr>

                                                <% if (sessoes && sessoes.length> 0) { %>
                                                    <% sessoes.forEach(function(sessao, indexSessao) { %>
                                                        <div
                                                            class="d-flex justify-content-between align-items-center mb-3">
                                                            <h6 class="pt-3">- <%= sessao.nome_da_sessao %>
                                                            </h6>
                                                            <div>
                                                                <!-- Botões de editar e excluir -->
                                                                <i class="icon-copy dw dw-edit-1" data-toggle="modal"
                                                                    data-target="#editSessaoModal<%= indexSessao %>"></i>
                                                                <i class="icon-copy dw dw-delete-2" data-toggle="modal"
                                                                    data-target="#deleteSessaoModal<%= indexSessao %>"></i>
                                                            </div>
                                                        </div>
                                                        <hr>

                                                        <!-- Modal para editar sessão e exercícios -->
                                                        <div class="modal fade" id="editSessaoModal<%= indexSessao %>"
                                                            tabindex="-1"
                                                            aria-labelledby="editSessaoModalLabel<%= indexSessao %>"
                                                            aria-hidden="true">
                                                            <div class="modal-dialog modal-lg">
                                                                <div style="border-radius: 20px;" class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title"
                                                                            id="editSessaoModalLabel<%= indexSessao %>">
                                                                            Editar Sessão e Exercícios</h5>
                                                                        <button type="button" class="close"
                                                                            data-dismiss="modal" aria-label="Close">
                                                                            <span aria-hidden="true">&times;</span>
                                                                        </button>
                                                                    </div>
                                                                    <form id="editSessaoForm<%= indexSessao %>"
                                                                        action="/admin/update-sessao/<%= sessao.id %>"
                                                                        method="POST">
                                                                        <input type="hidden" name="treinoId"
                                                                            value="<%= treino .id %>">
                                                                            <div class="modal-body">
                                                                                <div class="form-group">
                                                                                    <label for="nome_sessao_<%= indexSessao %>">Nome da Sessão:</label>
                                                                                    <input type="text" class="form-control" id="nome_sessao_<%= indexSessao %>" name="nome_sessao" value="<%= sessao.nome_da_sessao %>">
                                                                                </div>
                                                                            
                                                                                <div class="form-group">
                                                                                    <label>Exercícios:</label>
                                                                                    <% if (sessao.exercicios && sessao.exercicios.length > 0) { %>
                                                                                        <div class="row">
                                                                                            <% sessao.exercicios.forEach(function(exercicio, indexExercicio) { %>
                                                                                                <div class="col-lg-4 col-md-6 col-sm-12 mb-30">
                                                                                                    <div class="card card-box" style="background-color: #f8f9fa; display: flex; flex-direction: column; height: 100%;">
                                                                                                        <div class="card-header text-left bg-dark text-white pl-3 pt-1 pb-1">
                                                                                                            <strong style="font-size: medium;"><%= indexExercicio + 1 %></strong> - <%= exercicio.nome_do_exercicio %>
                                                                                                        </div>
                                                                                                        <img class="card-img-top" src="/<%= exercicio.img_url %>" alt="Imagem do Exercício" style="width: 100%; height: auto; object-fit: cover;">
                                                                                                        <div class="card-body" style="flex-grow: 1;">
                                                                                                            <div class="text-center">
                                                                                                                <button class="btn  font-16 w-100" type="button" data-toggle="collapse" data-target="#collapse_<%= indexExercicio %>" aria-expanded="false" aria-controls="collapse_<%= indexExercicio %>">
                                                                                                                    <i class="icon-copy dw dw-down-arrow-3"></i> Siga as instruções
                                                                                                                </button>
                                                                                                            </div>
                                                                                                        </div>
                                                                                                        <div id="collapse_<%= indexExercicio %>" class="collapse">
                                                                                                            <div class="list-group list-group-flush">
                                                                                                                <div class="list-group-item">
                                                                                                                    <label>Séries:</label>
                                                                                                                    <input type="number" class="form-control" name="exercicios[<%= indexExercicio %>][series]" value="<%= exercicio.series %>">
                                                                                                                </div>
                                                                                                                <div class="list-group-item">
                                                                                                                    <label>Repetições:</label>
                                                                                                                    <input type="number" class="form-control" name="exercicios[<%= indexExercicio %>][repeticoes]" value="<%= exercicio.repeticoes %>">
                                                                                                                </div>
                                                                                                                <div class="list-group-item">
                                                                                                                    <label>Carga (kg):</label>
                                                                                                                    <input type="number" class="form-control" step="0.01" name="exercicios[<%= indexExercicio %>][carga]" value="<%= exercicio.carga %>">
                                                                                                                </div>
                                                                                                                <div class="list-group-item">
                                                                                                                    <label>Unidade de Medida:</label>
                                                                                                                    <input type="text" class="form-control" name="exercicios[<%= indexExercicio %>][unidade_de_medida_carga]" value="<%= exercicio.unidade_de_medida_carga %>">
                                                                                                                </div>
                                                                                                                <div class="list-group-item">
                                                                                                                    <label>Equipamento Necessário:</label>
                                                                                                                    <input type="text" class="form-control" name="exercicios[<%= indexExercicio %>][equipamento_necessario]" value="<%= exercicio.equipamento_necessario %>">
                                                                                                                </div>
                                                                                                                <div class="list-group-item">
                                                                                                                    <label>Tempo de Descanso:</label>
                                                                                                                    <input type="text" class="form-control" name="exercicios[<%= indexExercicio %>][tempo_de_descanso]" value="<%= exercicio.tempo_de_descanso %>">
                                                                                                                </div>
                                                                                                                <div class="list-group-item">
                                                                                                                    <label>Nível de Dificuldade:</label>
                                                                                                                    <input type="text" class="form-control" name="exercicios[<%= indexExercicio %>][nivel_de_dificuldade]" value="<%= exercicio.nivel_de_dificuldade %>">
                                                                                                                </div>
                                                                                                            </div>
                                                                                                            <div class="text-center">
                                                                                                                <button class="btn  pt-2 w-100" type="button" data-toggle="collapse" data-target="#collapse_<%= indexExercicio %>" aria-expanded="true" aria-controls="collapse_<%= indexExercicio %>">
                                                                                                                    <i class="icon-copy dw dw-up-arrow-5"></i> Fechar
                                                                                                                </button>
                                                                                                            </div>
                                                                                                        </div>
                                                                                                        <hr>
                                                                                                    </div>
                                                                                                </div>
                                                                                            <% }); %>
                                                                                        </div>
                                                                                    <% } else { %>
                                                                                        <p>Não há exercícios cadastrados para esta sessão.</p>
                                                                                    <% } %>
                                                                                </div>
                                                                                
                                                                                
                                                                                
                                                                                
                                                                            </div>
                                                                            <div class="modal-footer">
                                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                                                                                <button type="submit" class="btn btn-primary">Salvar mudanças</button>
                                                                            </div>
                                                                            
                                                                            
                                                                            
                                                                            
                                                                            
                                                                            
                                                                            
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <!-- Modal para exclusão de sessão -->
                                                        <div class="modal fade" id="deleteSessaoModal<%= indexSessao %>"
                                                            tabindex="-1"
                                                            aria-labelledby="deleteSessaoModalLabel<%= indexSessao %>"
                                                            aria-hidden="true">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title"
                                                                            id="deleteSessaoModalLabel<%= indexSessao %>">
                                                                            Confirmar Exclusão</h5>
                                                                        <button type="button" class="close"
                                                                            data-dismiss="modal" aria-label="Close">
                                                                            <span aria-hidden="true">&times;</span>
                                                                        </button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        Tem certeza de que deseja excluir a sessão <%=
                                                                            sessao.nome %>?
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <form
                                                                            action="/admin/delete-sessao/<%= sessao.id %>"
                                                                            method="POST">
                                                                            <input type="hidden" name="treinoId"
                                                                                value="<%= treino.id %>">
                                                                            <button type="button"
                                                                                class="btn btn-secondary"
                                                                                data-dismiss="modal">Cancelar</button>
                                                                            <button type="submit"
                                                                                class="btn btn-danger">Excluir</button>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <% }); %>
                                                            <% } else { %>
                                                                <p>Não há sessões cadastradas para este treino.</p>
                                                                <% } %>
                                            </div>
                                        </div>
                                    </div>


                                    <!-- Modal para visualizar treino completo -->
                                    <div class="modal fade" id="viewDietaCompletaModal" tabindex="-1"
                                        aria-labelledby="viewDietaCompletaModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="viewDietaCompletaModalLabel">Treino
                                                        Completo</h5>
                                                    <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <h6>Nome do Treino: <%= treino.nome_da_dieta %>
                                                    </h6>
                                                    <hr>

                                                    <% if (sessoes && sessoes.length> 0) { %>
                                                        <% sessoes.forEach(function(sessao) { %>
                                                            <h6 class="pb-1"><strong>
                                                                    <%= sessao.nome %>
                                                                </strong></h6>
                                                            <ul>
                                                                <% if (sessao.exercicios && sessao.exercicios.length> 0)
                                                                    { %>
                                                                    <% sessao.exercicios.forEach(function(exercicio) {
                                                                        %>
                                                                        <li>
                                                                            <%= exercicio.quantidade %>
                                                                                <%= exercicio.unidadeMD %> <strong>
                                                                                        <%= exercicio.nome %>
                                                                                    </strong>
                                                                        </li>
                                                                        <% }) %>
                                                                            <% } else { %>
                                                                                <li>Sem exercícios cadastrados para esta
                                                                                    sessão.</li>
                                                                                <% } %>
                                                            </ul>
                                                            <hr>
                                                            <% }) %>
                                                                <% } else { %>
                                                                    <p>Não há sessões cadastradas para este treino.</p>
                                                                    <% } %>

                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">Fechar</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <a href="/admin/list-treinos" class="btn btn-outline-dark btn-sm">Voltar</a>
                            </div>
                        </div>
                        <!-- horizontal Basic Forms End -->
                        <%-include('./partials/footer')%>
                    </div>
                    <!-- js -->

                    <script src="../../boardMain/vendors/scripts/core.js"></script>
                    <script src="../../boardMain/vendors/scripts/script.min.js"></script>
                    <script src="../../boardMain/vendors/scripts/process.js"></script>
                    <script src="../../boardMain/vendors/scripts/layout-settings.js"></script>
                    <script>
                        document.addEventListener('DOMContentLoaded', () => {
                            let sessaoCount = 0;
                            const exercicios = <%- JSON.stringify(exercicios) %>; // Recebe a lista de exercícios do backend
                    
                            // Função para adicionar uma nova sessão
                            const addSessao = () => {
                                sessaoCount++;
                                const sessaoContainer = document.createElement('div');
                                sessaoContainer.classList.add('sessao');
                                sessaoContainer.innerHTML = `
                                    <h6>Sessão ${sessaoCount}</h6>
                                    <div class="form-group">
                                        <label for="nome_sessao_${sessaoCount}">Nome da Sessão:</label>
                                        <input class="form-control" type="text" name="sessoes[${sessaoCount}][nome_da_sessao]" id="nome_sessao_${sessaoCount}" placeholder="Adicionar sessão">
                                    </div>
                                    <div class="exercicios-container pt-2" id="exercicios_${sessaoCount}">
                                        <label><strong>Adicionar exercícios à sessão:</strong></label>
                                    </div>
                                    <button type="button" class="btn btn-dark add-exercicio" data-sessao="${sessaoCount}">
                                        <i class="icon-copy dw dw-add"></i> Adicionar Exercício
                                    </button>
                                    <hr>
                                `;
                                document.getElementById('sessoes-container').appendChild(sessaoContainer);
                            };
                    
                            // Função para adicionar exercícios a uma sessão
                            const addExercicio = (sessaoId) => {
                                const exerciciosContainer = document.getElementById(`exercicios_${sessaoId}`);
                                const exercicioCount = exerciciosContainer.querySelectorAll('.form-group').length + 1;
                    
                                const exercicioDiv = document.createElement('div');
                                exercicioDiv.classList.add('form-group');
                    
                                const selectAndQuantityHTML = `
                                    <div class="row">
                                        <div class="col-12">
                                            <label for="exercicio_${sessaoId}_${exercicioCount}">- Exercício:</label>
                                            <select class="form-control exercicio-select" name="sessoes[${sessaoId}][exercicios][${exercicioCount}][id]" id="exercicio_${sessaoId}_${exercicioCount}">
                                                <option value="">Selecione um exercício</option>
                                                ${exercicios.map(exercicio => `<option value="${exercicio.id}">${exercicio.nome_do_exercicio}</option>`).join('')}
                                            </select>
                                        </div>
                                        <div class="col-sm-12  pt-2">
                                            <label for="series_${sessaoId}_${exercicioCount}">- Séries:</label>
                                            <input class="form-control" type="number" name="sessoes[${sessaoId}][exercicios][${exercicioCount}][series]" id="series_${sessaoId}_${exercicioCount}" placeholder="Digite o número de séries">
                                        </div>
                                        <div class="col-sm-12  pt-2">
                                            <label for="repeticoes_${sessaoId}_${exercicioCount}">- Repetições:</label>
                                            <input class="form-control" type="number" name="sessoes[${sessaoId}][exercicios][${exercicioCount}][repeticoes]" id="repeticoes_${sessaoId}_${exercicioCount}" placeholder="Digite o número de repetições">
                                        </div>
                                        <div class="col-sm-12  pt-2">
                                            <label for="carga_${sessaoId}_${exercicioCount}">- Carga total:</label>
                                            <input class="form-control" type="number" step="0.01" name="sessoes[${sessaoId}][exercicios][${exercicioCount}][carga]" id="carga_${sessaoId}_${exercicioCount}" placeholder="Digite a carga">
                                        </div>
                                        
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-12  pt-2">
                                            <label for="unidade_de_medida_carga_${sessaoId}_${exercicioCount}">- unidade_de_medida_carga :</label>
                                            <input class="form-control" type="text" step="0.01" name="sessoes[${sessaoId}][exercicios][${exercicioCount}][unidade_de_medida_carga]" id="unidade_de_medida_carga_${sessaoId}_${exercicioCount}" placeholder="Digite a 	unidade_de_medida_carga">
                                        </div>
                                        <div class="col-sm-12 pt-2">
                                            <label for="equipamento_necessario_${sessaoId}_${exercicioCount}">- equipamento_necessario:</label>
                                            <input class="form-control" type="text" step="0.01" name="sessoes[${sessaoId}][exercicios][${exercicioCount}][equipamento_necessario]" id="equipamento_necessario_${sessaoId}_${exercicioCount}" placeholder="Digite o equipamento_necessario">
                                        </div>
                                        <div class="col-sm-12  pt-2">
                                            <label for="tempo_de_descanso_${sessaoId}_${exercicioCount}">- Tempo de descanso (min):</label>
                                            <input class="form-control" type="text" step="0.01" name="sessoes[${sessaoId}][exercicios][${exercicioCount}][tempo_de_descanso]" id="tempo_de_descanso_${sessaoId}_${exercicioCount}" placeholder="Digite o tempo_de_descanso">
                                        </div>
                                        <div class="col-sm-12 pt-2">
                                            <label for="nivel_de_dificuldade_${sessaoId}_${exercicioCount}">- nivel_de_dificuldade:</label>
                                            <input class="form-control" type="text" step="0.01" name="sessoes[${sessaoId}][exercicios][${exercicioCount}][nivel_de_dificuldade]" id="nivel_de_dificuldade_${sessaoId}_${exercicioCount}" placeholder="Digite o nivel de dificuldade">
                                        </div>
                                        <hr>
                                    </div>
                                `;
                                exercicioDiv.innerHTML = selectAndQuantityHTML;
                                exerciciosContainer.appendChild(exercicioDiv);
                    
                                // Ativar o plugin Select2 para o campo select com busca
                                $(`#exercicio_${sessaoId}_${exercicioCount}`).select2({
                                    placeholder: 'Selecione ou busque um exercício',
                                    width: '100%'
                                });
                            };
                    
                            // Event Listener para adicionar nova sessão
                            document.getElementById('add-sessao').addEventListener('click', addSessao);
                    
                            // Event Listener para adicionar exercícios à sessão
                            document.getElementById('sessoes-container').addEventListener('click', (event) => {
                                if (event.target.classList.contains('add-exercicio') || event.target.closest('.add-exercicio')) {
                                    const button = event.target.classList.contains('add-exercicio') ? event.target : event.target.closest('.add-exercicio');
                                    const sessaoId = button.dataset.sessao;
                                    addExercicio(sessaoId);
                                }
                            });
                    
                            // Log para verificar os dados enviados ao submeter o formulário
                            document.getElementById('treino-form').addEventListener('submit', (event) => {
                                console.log("Dados enviados:");
                                const formData = new FormData(event.target);
                                for (let pair of formData.entries()) {
                                    console.log(`${pair[0]}: ${pair[1]}`);
                                }
                            });
                        });
                    </script>
                    


</body>

</html>